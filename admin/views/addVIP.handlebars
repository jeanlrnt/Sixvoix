{{>menu-admin}}
<fieldset id="admin-container">
    <legend>
        <p>Ajout VIPs</p>
    </legend>
    <div>
        <form ref='uploadForm'
              id='uploadForm'
              action="/request/add"
              method="post"
              encType="multipart/form-data">
            <div class="col-6">
                <div class="form-item">
                    <label for="nom">Nom* : </label>
                    <input type="text" name="nom" id="nom" required>
                </div>
                <div class="form-item">
                    <label for="prenom">Prénom* : </label>
                    <input type="text" name="prenom" id="prenom" required>
                </div>
                <div class="form-item">
                    <label for="sexe">Sexe : </label>
                    <select name="sexe" id="sexe" required>
                        <option></option>
                        <option value="H">Masculin</option>
                        <option value="F">Feminin</option>
                    </select>
                </div>
                <div class="form-item">
                    <label for="naissance">Date de naissance : </label>
                    <input type="date" name="naissance" id="naissance" placeholder="jj/mm/aaaa" required>
                </div>
            </div>
            <div class="form-item">
                <label for="nationalite">Nationalité : </label>
                <select name="nationalite" id="nationalite" required>
                    <option></option>
                    {{#each nationalite}}
                        <option value="{{this.id}}">{{this.nationalite}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-item">
                <label for="commentaire">Commentaire : </label>
                <textarea name="commentaire" id="commentaire" rows="5" required></textarea>
            </div>
            <fieldset>
                <legend>Photos</legend>
                <div>
                    <div class="form-item">
                        <label for="image_profil_file">Séléctionner la photo de profil : </label>
                        <input type="file"
                               name="image_profil_file"
                               id="image_profil_file"
                               accept=".jpg,.png,.jpeg"
                               required>
                    </div>
                    <div class="col-6">
                        <div class="form-item">
                            <label for="image_profil_sujet">Sujet : </label>
                            <textarea name="image_profil_sujet" id="image_profil_sujet" rows="2" required></textarea>
                        </div>
                        <div class="form-item">
                            <label for="image_profil_detail">Detail : </label>
                            <textarea name="image_profil_detail" id="image_profil_detail" rows="2" required></textarea>
                        </div>
                    </div>
                </div>
                <input type="button" value="Ajouter une photo" class="addItem" id="photo-add">
            </fieldset>
            <fieldset>
                <legend>Relations</legend>
                <div class="relation-liste" id="mariage"></div>
            </fieldset>
            <fieldset>
                <legend>Métiers</legend>
                <div class="job-list" id="acteur">
                    <input type="checkbox" id="acteur-checkbox" name="acteur">
                    <label for="acteur-checkbox" class="job-name">Acteur</label>
                    <div class="col-6 job-detail">
                        <div class="form-item">
                            <label for="acteur-start">Début de carrière : </label>
                            <input type="date" name="acteur_start" id="acteur-start">
                        </div>
                        <input type="button" class="addItem" id="acteur-add" value="Ajouter un rôle">
                        <div class="form-item">
                            <label for="acteur_role_0">Rôle : </label>
                            <input type="text" name="acteur_film_role_0" id="acteur_role_0">
                        </div>
                        <div class="form-item">
                            <label for="acteur_titre_0">Film : </label>
                            <select name="acteur_film_titre_0" id="acteur_titre_0">
                                <option></option>
                                {{#each films}}
                                    <option value="{{this.id}}" class="film">{{this.titre}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                </div>
                <div class="job-list" id="realisateur">
                    <input type="checkbox" id="realisateur-checkbox" name="realisateur">
                    <label for="realisateur-checkbox" class="job-name">Realisateur</label>
                    <div class="job-detail">
                        <input type="button" class="addItem" id="realisateur-add" value="Ajouter un film">
                    </div>
                </div>
                <div class="job-list" id="chanteur">
                    <input type="checkbox" id="chanteur-checkbox" name="chanteur">
                    <label for="chanteur-checkbox" class="job-name">Chanteur</label>
                    <div class="job-detail">
                        <div class="col-6">
                            <div class="form-item">
                                <label for="chanteur-specialite">Spécialité : </label>
                                <input type="text" name="chanteur_specialite" id="chanteur-specialite">
                            </div>
                            <input type="button" class="addItem" id="chanteur-add" value="Ajouter un album">
                        </div>
                        <div class="col-6">
                            <div class="form-item">
                                <label for="album_date_0">Date de sortie : </label>
                                <input type="date" name="chant_album_date_0" id="album_date_0">
                            </div>
                            <div class="form-item">
                                <label for="album_titre_0">Titre : </label>
                                <input type="text" name="chant_album_titre_0" id="album_titre_0">
                            </div>
                            <div class="form-item">
                                <label for="album_prod_0">Maison de disque : </label>
                                <select name="chant_album_prod_0" id="album_prod_0">
                                    <option></option>
                                    {{#each maisons_de_disque}}
                                        <option value="{{this.id}}">{{this.nom}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="job-list" id="mannequin">
                    <input type="checkbox" id="mannequin-checkbox" name="mannequin">
                    <label for="mannequin-checkbox" class="job-name">Mannequin</label>
                    <div class="job-detail">
                        <div class="col-6">
                            <div class="form-item">
                                <label for="mannequin-taille">Taille : </label>
                                <input type="text" name="mannequin_taille" id="mannequin-taille">
                            </div>
                            <div class="form-item">
                                <label for="mannequin-agence">Agence : </label>
                                <select name="mannequin_agence" id="mannequin-agence">
                                    <option></option>
                                    {{#each agence}}
                                        <option value="{{this.id}}">{{this.agence}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <input type="button" class="addItem" id="mannequin-add" value="Ajouter un défilé"><div class="col-6">
                        <div>
                            <div class="form-item">
                                <label for="model_lieu_0">Défilé 1 : </label>
                                <select name="model_defile_lieu_0" id="model_lieu_0">
                                    <option></option>
                                    {{#each defiles}}
                                        <option value="{{this.id}}">{{this.lieu}} le {{formatDate this.date 'LLLL'}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
                <div class="job-list" id="couturier">
                    <input type="checkbox" id="couturier-checkbox" name="couturier">
                    <label for="couturier-checkbox" class="job-name">Couturier</label>
                    <div class="job-detail">
                        <input type="button" class="addItem" id="couturier-add" value="Ajouter un défilé">
                    </div>
                </div>
            </fieldset>
            <input type="submit">
        </form>
    </div>
</fieldset>

{{>menu-admin-article}}
{{#if article}}
    <fieldset>
        <legend>Modification d'un article</legend>
        <div>
            <form action=""
                  method="post"
                  id="edit_photo">
                <div class="col-6 form-item">
                    <label for="article_to_edit">Nom de l'article : </label>
                    <select name="article_to_edit" id="article_to_edit" required>
                        <option></option>
                        {{#each article}}
                            <option value="{{this.id}}">{{this.titre}} du {{formatDate this.date "DD MMMM YYYY"}}</option>
                        {{/each}}
                    </select>
                </div>
                <div>
                    <h4 class="label-preview">Aper√ßu : </h4>
                    <textarea cols="50" rows="5" id="preview_0" data-id="article_preview_" readonly></textarea>
                    {{#each article}}
                        <textarea cols="50" rows="5" id="preview_{{this.id}}" data-id="article_preview_{{this.id}}">{{this.resume}}</textarea>
                    {{/each}}
                    <input type="hidden" name="article_edited" id="article_edited" value="">
                </div>

                <input type="submit" value="Modifier">
                <input type="reset" id="photo_reset">
            </form>
        </div>
    </fieldset>
{{else}}
    <script>location.href = `${location.origin}/article`</script>
{{/if}}